<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_system.controller.EnrollmentController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15" layoutX="20" layoutY="20" prefWidth="600">

            <Label text="Schüler–Kurs-Zuordnung" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Schüler:"/>
                <ComboBox fx:id="studentCombo" prefWidth="200"/>
                <Label text="Kurs:"/>
                <ComboBox fx:id="courseCombo" prefWidth="200"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button text="➕ Zuordnen" onAction="#handleAddEnrollment"/>
                <Button text="🗑️ Entfernen" onAction="#handleRemoveEnrollment"/>
                <Button text="🔄 Laden" onAction="#loadData"/>
            </HBox>

            <TableView fx:id="enrolledCoursesTable" prefHeight="300" prefWidth="500">
                <columns>
                    <TableColumn fx:id="courseIdColumn" text="Kurs-ID" prefWidth="100"/>
                    <TableColumn fx:id="courseNameColumn" text="Kursname" prefWidth="300"/>
                </columns>
            </TableView>

            <Label fx:id="statusLabel" text=""/>
        </VBox>
    </children>
</AnchorPane>
