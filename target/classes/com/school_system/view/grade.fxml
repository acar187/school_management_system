<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.school_system.controller.GradeController"
            prefWidth="700" prefHeight="450">

    <VBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <HBox spacing="10">
            <Label text="Schüler:"/>
            <ComboBox fx:id="studentComboBox" prefWidth="180"/>

            <Label text="Kurs:"/>
            <ComboBox fx:id="courseComboBox" prefWidth="180"/>

            <Label text="Note:"/>
            <TextField fx:id="gradeField" prefWidth="80"/>

            <Button text="Hinzufügen" onAction="#onAddGrade"/>
        </HBox>

        <TableView fx:id="gradeTable" prefHeight="400">
            <columns>
                <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
                <TableColumn text="Schüler" fx:id="colStudent" prefWidth="120"/>
                <TableColumn text="Kurs" fx:id="colCourse" prefWidth="120"/>
                <TableColumn text="Note" fx:id="colGrade" prefWidth="100"/>
                <TableColumn text="Datum" fx:id="colDate" prefWidth="150"/>
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Bearbeiten" onAction="#onUpdateGrade"/>
            <Button text="Löschen" onAction="#onDeleteGrade"/>
        </HBox>
    </VBox>
</AnchorPane>
