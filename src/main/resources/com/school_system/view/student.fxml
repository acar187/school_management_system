<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.school_system.controller.StudentController"
      spacing="10" alignment="CENTER" prefWidth="900" prefHeight="700">

       <Label text="Schülerverwaltung" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <!-- 🔍 Suchfeld -->
            <TextField fx:id="searchField" promptText="Suche nach Name, E-Mail oder Matrikelnummer..." prefWidth="500"/>

    <TableView fx:id="studentTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="E-Mail" prefWidth="200"/>
            <TableColumn fx:id="colMatriculation" text="Matrikelnummer" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="emailField" promptText="E-Mail"/>
        <TextField fx:id="matriculationField" promptText="Matrikelnummer"/>
        <Button text="Hinzufügen" onAction="#handleAdd"/>
        <Button text="Aktualisieren" onAction="#handleUpdateStudent"/>
        <Button text="Löschen" onAction="#handleDelete"/>
        <Button text="Neu laden" onAction="#loadStudents"/>
    </HBox>

</VBox>
