<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.school_system.controller.StudentController">
    <children>
        <VBox spacing="15" alignment="TOP_CENTER" layoutX="20" layoutY="20" prefWidth="860" prefHeight="660">

            <Label text="Schülerverwaltung" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <!-- 🔍 Suchfeld -->
            <TextField fx:id="searchField" promptText="Suche nach Name, E-Mail oder Matrikelnummer..." prefWidth="500"/>

            <!-- Tabelle -->
            <TableView fx:id="studentTable" prefHeight="250" prefWidth="500">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="emailColumn" text="E-Mail" prefWidth="200"/>
                    <TableColumn fx:id="matriculationColumn" text="Matrikelnummer" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- Formular-Bereich -->
            <TitledPane text="Schülerdaten bearbeiten" expanded="true" prefWidth="500">
                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                    <TextField fx:id="nameField" promptText="Name"/>
                    <TextField fx:id="emailField" promptText="E-Mail"/>
                    <TextField fx:id="matriculationField" promptText="Matrikelnummer"/>
                </VBox>
            </TitledPane>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="➕ Hinzufügen" onAction="#handleAddStudent"/>
                <Button text="✏️ Aktualisieren" onAction="#handleUpdateStudent"/>
                <Button text="🗑️ Löschen" onAction="#handleDeleteStudent"/>
                <Button text="🔄 Neu laden" onAction="#loadStudents"/>
            </HBox>

            <Label fx:id="statusLabel" text="" style="-fx-text-fill: #444;"/>
        </VBox>
    </children>
</AnchorPane>

