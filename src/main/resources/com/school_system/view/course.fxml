<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.school_system.controller.CourseController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="20" layoutY="20" spacing="15" prefWidth="860" prefHeight="660">

            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Kursverwaltung" />

            <TableView fx:id="courseTable" prefHeight="250" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="550" text="Kursname" />
                    <!--<TableColumn fx:id="descriptionColumn" text="Beschreibung" prefWidth="250"/>-->
                </columns>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </TableView>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="nameField" promptText="Kursname" />
               <!-- <TextField fx:id="descriptionField" promptText="Beschreibung"/> -->
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#handleAddCourse" text="➕ Hinzufügen" />
                <Button onAction="#handleUpdateCourse" text="✏️ Aktualisieren" />
                <Button onAction="#handleDeleteCourse" text="🗑️ Löschen" />
                <Button onAction="#loadCourses" text="🔄 Neu laden" />
            </HBox>

            <Label fx:id="statusLabel" text="" />
        </VBox>
    </children>
</AnchorPane>
